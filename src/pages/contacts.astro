---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import CallbackForm from '../components/CallbackForm.astro';
---

<BaseLayout title="Контакты - ISP Provider">
	<Header />
	
	<main>
		<section class="py-16 md:py-24">
			<div class="container mx-auto px-4 md:px-8 max-w-7xl">
				<h1 class="text-4xl md:text-5xl mb-4 text-[#1a1a2e] dark:text-white text-center">Контакты</h1>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-8">
					<div>
						<h2 class="mb-8 text-[#1a1a2e] dark:text-white">Свяжитесь с нами</h2>
						<div class="mb-8 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
							<h3 class="mb-2 text-[#4a9eff]">Телефон</h3>
							<p class="my-1 text-gray-600 dark:text-gray-300">+7 (800) 123-45-67</p>
							<p class="my-1 text-gray-600 dark:text-gray-300">+7 (495) 123-45-67</p>
						</div>
						<div class="mb-8 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
							<h3 class="mb-2 text-[#4a9eff]">Email</h3>
							<p class="my-1 text-gray-600 dark:text-gray-300">info@ispprovider.ru</p>
							<p class="my-1 text-gray-600 dark:text-gray-300">support@ispprovider.ru</p>
						</div>
						<div class="mb-8 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
							<h3 class="mb-2 text-[#4a9eff]">Адрес</h3>
							<p class="my-1 text-gray-600 dark:text-gray-300">г. Москва, ул. Примерная, д. 1</p>
						</div>
						<div class="mb-8 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
							<h3 class="mb-2 text-[#4a9eff]">Режим работы</h3>
							<p class="my-1 text-gray-600 dark:text-gray-300">Пн-Пт: 9:00 - 20:00</p>
							<p class="my-1 text-gray-600 dark:text-gray-300">Сб-Вс: 10:00 - 18:00</p>
						</div>
					</div>
					<div>
						<ContactForm />
						<div class="mt-8">
							<CallbackForm />
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</BaseLayout>
