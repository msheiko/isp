---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TariffCalculator from '../components/TariffCalculator.astro';
---

<BaseLayout title="Тарифы - ISP Provider">
	<Header />
	
	<main>
		<section class="py-16 md:py-24">
			<div class="container mx-auto px-4 md:px-8 max-w-7xl">
				<h1 class="text-4xl md:text-5xl mb-4 text-[#1a1a2e] dark:text-white text-center">Тарифные планы</h1>
				<p class="text-xl text-gray-600 dark:text-gray-300 text-center mb-12">Выберите подходящий тариф для ваших потребностей</p>
				<TariffCalculator />
			</div>
		</section>
	</main>

	<Footer />
</BaseLayout>
