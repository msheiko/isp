<div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-lg shadow-md">
	<h2 class="mt-0 mb-8 text-[#1a1a2e] dark:text-white">Карта покрытия</h2>
	<div class="grid grid-cols-1 lg:grid-cols-[300px_1fr] gap-8" x-data="{ 
		selectedArea: null,
		areas: [
			{ id: 1, name: 'Центральный район', coverage: 95, color: '#4a9eff' },
			{ id: 2, name: 'Северный район', coverage: 80, color: '#5cb85c' },
			{ id: 3, name: 'Южный район', coverage: 70, color: '#f0ad4e' },
			{ id: 4, name: 'Восточный район', coverage: 60, color: '#d9534f' },
			{ id: 5, name: 'Западный район', coverage: 85, color: '#5bc0de' }
		],
		selectArea(area) {
			this.selectedArea = area;
		}
	}">
		<div>
			<h3 class="mb-4 text-gray-800 dark:text-gray-200">Легенда покрытия</h3>
			<div class="flex flex-col gap-2">
				<template x-for="area in areas" :key="area.id">
					<div 
						class="flex items-center gap-3 p-3 border-2 rounded-md cursor-pointer transition-all"
						:class="selectedArea && selectedArea.id === area.id ? 'border-[#4a9eff] bg-blue-50 dark:bg-blue-900/30' : 'border-gray-200 dark:border-gray-700 hover:border-[#4a9eff] hover:bg-blue-50 dark:hover:bg-blue-900/30'"
						@click="selectArea(area)"
					>
						<span class="w-5 h-5 rounded" :style="`background: ${area.color}`"></span>
						<span x-text="area.name" class="flex-1"></span>
						<span class="font-bold text-[#4a9eff]" x-text="`${area.coverage}%`"></span>
					</div>
				</template>
			</div>
		</div>
		<div>
			<div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 min-h-[400px]">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 h-full">
					<template x-for="area in areas" :key="area.id">
						<div 
							class="rounded-lg p-4 cursor-pointer transition-all flex flex-col justify-center items-center text-white relative"
							:style="`background: ${area.color}; opacity: ${area.coverage / 100}`"
							:class="selectedArea && selectedArea.id === area.id ? 'ring-4 ring-[#1a1a2e] ring-offset-2' : ''"
							@click="selectArea(area)"
						>
							<div class="font-bold text-lg mb-2 drop-shadow-md" x-text="area.name"></div>
							<div class="text-2xl font-bold drop-shadow-md" x-text="`${area.coverage}%`"></div>
						</div>
					</template>
				</div>
			</div>
		</div>
		<div x-show="selectedArea" class="lg:col-span-2 bg-gray-50 dark:bg-gray-700 p-6 rounded-lg mt-4">
			<h3 class="mt-0 text-[#1a1a2e] dark:text-white" x-text="selectedArea?.name"></h3>
			<p class="my-2 text-gray-600 dark:text-gray-300">Покрытие: <strong x-text="`${selectedArea?.coverage}%`"></strong></p>
			<p class="my-2 text-gray-600 dark:text-gray-300">Статус: <strong>Доступно</strong></p>
			<button class="mt-4 px-8 py-3 border-none rounded-md text-base cursor-pointer transition-all bg-[#4a9eff] text-white hover:bg-[#357abd]">Подключить</button>
		</div>
	</div>
</div>
